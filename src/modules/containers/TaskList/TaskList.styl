.task-list
  margin-left 1rem

  &__tasks
    display inline-block
    padding-left 3rem

  &__icon
    position absolute    
    margin-left -1rem
    margin-top -0.5rem
    width 25px
    height 25px
    z-index 1

  &__icon-button
    position absolute
    padding 0
    margin-top 1.5rem
    min-width 25px !important
    min-height 25px !important
    & > *
      width 25px
      height 25px
      border-radius 50px !important